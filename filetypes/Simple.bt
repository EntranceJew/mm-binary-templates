// -*- mode: c;-*-
typedef struct {
    ubyte red;
    ubyte green;
    ubyte blue;
} ZColor;

typedef struct {
    // These are signed. 0x7FFF = 1.0
    hfloat x;
    hfloat y;
    hfloat z;
} ZNormal;

typedef struct {
    // These are signed.
    short x;
    short y;
    short z;
} ZVector;

typedef struct {
    ubyte x;
    ubyte y;
    ubyte z;
} ZByteVector;

typedef struct {
    byte x;
    byte y;
    byte z;
} ZUByteVector;
